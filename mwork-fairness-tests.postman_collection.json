            "url": "{{baseUrl}}/castings/{{castingId}}/responses",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Applying for casting\",\n  \"proposed_rate\": 1000\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Apply returns 201', function () {",
                  "  pm.expect(pm.response.code).to.eql(201);",
                  "});",
                  "var json = pm.response.json();",
                  "pm.environment.set('responseId', json.data.id);"
                ]
              }
            }
          ]
        },
