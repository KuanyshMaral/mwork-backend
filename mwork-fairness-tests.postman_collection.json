              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Casting\",\n  \"description\": \"This is a test casting used for fairness checks.\",\n  \"city\": \"Almaty\",\n  \"pay_type\": \"negotiable\",\n  \"status\": \"active\",\n  \"requirements\": {}\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  var json = pm.response.json();",
                  "  pm.environment.set('castingId', json.data.id);",
                  "} else {",
                  "  pm.test('Create Casting may require verified employer; set castingId manually if needed', function () {",
                  "    pm.expect([201, 400, 403, 409]).to.include(pm.response.code);",
                  "  });",
                  "}"
                ]
              }
            }
          ]
        },
